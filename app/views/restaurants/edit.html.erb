<h1>Edit your Restaurant:</h1>

<%= form_for(@restaurant) do |t| %>
  <%= t.label :name %>
  <%= t.text_field :name %>

  <%= t.label :address %>
  <%= t.text_field :address %>

  <%= t.label :phone_number %>
  <%= t.text_field :phone_number %>

  <%= t.label :category %>
  <%= t.select :category, %w(chinese italian japanese french belgian) %>

  <%= t.submit %>
<% end %>
